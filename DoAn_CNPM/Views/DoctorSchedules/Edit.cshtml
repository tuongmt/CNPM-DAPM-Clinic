@model DoAn_CNPM.Models.DoctorSchedule

@{
    ViewBag.Title = "CẬP NHẬT LỊCH KHÁM CỦA BÁC SĨ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid f-edit">
    <div class="tabular--wrapper">
        <div class="table-container">
            <h2 class="h2--title">@ViewData["Title"]</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.DSId)

                    <div class="row">
                        <div class="control-label col-md-4">
                            Id Bác sĩ
                        </div>
                        <div class="col-md-8">
                            @Html.DropDownList("DoctorId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="control-label col-md-4">
                            Ngày trong tuần
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.DayOfWeek, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DayOfWeek, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="control-label col-md-4">
                            Thời gian bắt đầu
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.TimeStart, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TimeStart, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="control-label col-md-4">
                            Thời gian kết thúc
                        </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.TimeEnd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TimeEnd, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12" style="text-align:center">
                            <input type="submit" value="Lưu" class="btn btn-primary" , style="color:white" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="back">
        <a href="~/DoctorSchedules/Index"><i class="fa-solid fa-arrow-left"></i></a>
    </div>
</div>