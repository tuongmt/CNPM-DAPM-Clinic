@model DoAn_CNPM.Models.DoctorSchedule

@{
    ViewBag.Title = "XÓA LỊCH KHÁM CỦA BÁC SĨ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid f-edit">
    <div class="tabular--wrapper">
        <div class="table-container">
            <h2 class="h2--title">@ViewBag.Title </h2>
            <div>
                <hr />
                <dl class="row">

                    <dt class=" col-sm-4">
                        Bác sĩ
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Doctor.FullName)
                    </dd>

                    <dt class=" col-sm-4">
                        Ngày trong tuần
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DayOfWeek)
                    </dd>

                    <dt class=" col-sm-4">
                        Giờ bắt đầu
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TimeStart)
                    </dd>

                    <dt class=" col-sm-4">
                        Giờ kết thúc
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TimeEnd)
                    </dd>

                    <dd class="col-12" style="text-align:center">
                        <br />
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Xóa" class="btn btn-del" />
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="back">
        <a href="~/DoctorSchedules/Index"><i class="fa-solid fa-arrow-left"></i></a>
    </div>

</div>