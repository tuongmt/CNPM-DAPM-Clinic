@model IEnumerable<DoAn_CNPM.Models.Form>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style=" width: 100%; ">
    <h2 style="text-align: center; padding-top: 20px">THÔNG TIN ĐƠN KHÁM</h2>
    <hr />
    <div class="form-group form-inline" style="border: 3px solid #00E216; height: 70px; text-align: center; padding: 15px; ">
        @using (Html.BeginForm("Index", "Forms", FormMethod.Get))
        {
            <table>
                <tr>
                    <td>
                        @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success" })
                    </td>
                    <td style="padding-left:30px">
                        Tìm theo tên khách hàng: <input type="text" name="SearchString" />
                        <span style="padding-right:16px"> </span>
                        Tìm theo tên bác sĩ: <input type="text" name="SearchString1" />
                        <input type="submit" value="Tìm kiếm" class="btn btn-info"  style="color:white"/>
                    </td>
                </tr>
            </table>
        }
    </div>
    <table class="table table-hover table-striped table-bordered" style="width:100%">
        <tr>
            <th>
                ID
                @ViewBag.TotalFormIds
            </th>
            <th>
                Thời gian Khám
            </th>
            <th>
                Tên Khách hàng
            </th>
            <th>
                Tên Bác sĩ
            </th>
            <th>
                Tên Nhân viên
            </th>

            <th>Chức năng Sửa - Xóa</th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdForm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExamTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.NameCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.NameDoctor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff.NameStaff)
        </td>

        <td style="color:white">
            @Html.ActionLink("Sửa", "Edit", new { id = item.IdForm }, new { @class = "btn btn-warning", style = "color: white" }) |

            @Html.ActionLink("Xóa", "Delete", new { id = item.IdForm }, new { @class = "btn btn-danger" })
        </td>
    </tr>
        }

    </table>
</div>