@model DoAn_CNPM.Models.Form

@{
    ViewBag.Title = "CẬP NHẬT ĐƠN KHÁM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid f-edit">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Forms/Index">Đơn khám</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật</li>
            </ol>
        </nav>
    </div>
    <div class="tabular--wrapper">
        <div class="table-container">
            <h2 class="h2--title">@ViewData["Title"]</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.FormId)

                <div class="row">
                    <div class="col-2">
                        <label>Id </label>
                        <input type="text" name="FormId" value="@Model.FormId" class="form-control" disabled />
                        @Html.ValidationMessageFor(model => model.FormId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-10">
                        <label>Thời gian khám</label>
                        @Html.EditorFor(model => model.ExamTime, new { htmlAttributes = new { @class = "form-control", @Value = Model.ExamTime.Value.ToString("dd MM yyyy HH:mm:ss", new System.Globalization.CultureInfo("vi-VN")) } })
                        @Html.ValidationMessageFor(model => model.ExamTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="row">
                        <div class="col-12">
                            <label>Bác sĩ</label>
                            @Html.DropDownList("DoctorId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label>Khách hàng</label>
                            @Html.DropDownList("PatientId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <label>Nhân viên</label>
                            @Html.DropDownList("StaffId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StaffId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row input-wrapper">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

