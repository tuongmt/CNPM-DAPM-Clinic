@model DoAn_CNPM.Models.Form

@{
    ViewBag.Title = "CẬP NHẬT ĐƠN KHÁM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid f-edit">
    <div class="tabular--wrapper">
        <div class="table-container">
            <h2 class="h2--title">@ViewData["Title"]</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.FormId)

                    <div class="row">
                        <div class="col-sm-4">
                            Ngày khám
                        </div>
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.ExamTime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ExamTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            Bác sĩ
                        </div>
                        <div class="col-sm-8">
                            @Html.DropDownList("DoctorId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            Khách hàng
                        </div>
                        <div class="col-sm-8">
                            @Html.DropDownList("PatientId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            Nhân viên
                        </div>
                        <div class="col-sm-8">
                            @Html.DropDownList("StaffId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StaffId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <br />

                    <div class="row">
                        <div class="col-12" style="text-align:center">
                            <input type="submit" value="Lưu" class="btn btn-primary" , style="color:white" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="back">
        <a href="~/Forms/Index"><i class="fa-solid fa-arrow-left"></i></a>
    </div>
</div>

