@model IEnumerable<DoAn_CNPM.Models.Customer>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style=" width: 100%; ">
    <h2 style="text-align: center; padding-top: 20px">THÔNG TIN KHÁCH HÀNG</h2>
    <hr />
    <div class="form-group form-inline"  style="border: 3px solid #00E216; height: 70px; text-align: center; padding: 15px; ">     
        @using (Html.BeginForm("Index", "Customers", FormMethod.Get)) { 
        <table>
                <tr>
                    <td>
                        @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success" })
                    </td>
                    <td style="padding-left:30px">
                        Tìm Khách hàng: <input type="text" name="SearchString" />
                        <input type="submit" value="Tìm kiếm" class="btn btn-info" style="color:white" />
                    </td>
                    
                </tr>
            </table>  
        }
    </div>
    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên Khách
            </th>
            <th>
                Số điện thoại
            </th>
            <th>Chức năng Sửa - Xóa</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneCus)
                </td>
                <td style="color:white">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IdCus }, new { @class = "btn btn-warning", style = "color: white" }) |
          
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IdCus }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>