@model DoAn_CNPM.Models.Doctor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style=" width: 50%; ">
    <h2 style="text-align: center">SỬA THÔNG TIN BÁC SĨ</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdDoctor)

    <div class="row">
        <div class="control-label col-md-4">
            Họ tên Bác sĩ
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.NameDoctor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameDoctor, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <div class="row">
        <div class="control-label col-md-4">
            Số điện thoại
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.PhoneDoctor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneDoctor, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <input type="submit" value="Lưu" class="btn btn-primary" , style="color:white" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>
