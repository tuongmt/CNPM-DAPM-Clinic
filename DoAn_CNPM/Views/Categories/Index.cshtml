@model IEnumerable<DoAn_CNPM.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div >
    <div  style=" width: 100%; ">
        <h2 style="text-align: center; padding-top: 20px">PHÂN LOẠI BỆNH</h2>
        <hr />
        <div class="form-group form-inline" style="border: 3px solid #00E216;  text-align: center; padding: 15px; ">
            @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
            {
                <table>
                    <tr>
                        <td>
                            @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success" })
                        </td>
                        <td style="padding-left:30px">
                            Tìm loại bệnh  : <input type="text" name="SearchString" style="padding-right:8px" />

                            <input type="submit" value="Tìm kiếm" class="btn btn-info" style="color:white"/>
                        </td>
                    </tr>
                </table>
            }
        </div>
        <table class="table table-hover table-striped table-bordered">
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Tên loại bệnh
                </th>
                <th>Chức năng Sửa - Xóa</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameCat)
                    </td>

                    <td style="color:white">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IdCat }, new { @class = "btn btn-warning", style = "color: white" }) |

                        @Html.ActionLink("Xóa", "Delete", new { id = item.IdCat }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
