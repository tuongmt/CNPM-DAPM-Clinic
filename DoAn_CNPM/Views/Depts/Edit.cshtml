@model DoAn_CNPM.Models.Dept

@{
    ViewBag.Title = "CẬP NHẬT KHOA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid f-edit">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Depts/Index">Khoa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật</li>
            </ol>
        </nav>
    </div>
    <div class="tabular--wrapper">
        <div class="table-container">
            <h2 class="h2--title">@ViewData["Title"]</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.DeptId)

                <div class="row">
                    <div class="col-2">
                        <label>Id </label>
                        <input type="text" name="DeptId" value="@Model.DeptId" class="form-control" disabled />
                        @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-10">
                        <label> Tên khoa</label>
                        @Html.EditorFor(model => model.DeptName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DeptName, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="row input-wrapper">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
