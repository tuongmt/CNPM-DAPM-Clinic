@model DoAn_CNPM.Models.Patient

@{
    ViewBag.Title = "XÓA BỆNH NHÂN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid f-edit">
    <div class="tabular--wrapper">
        <div class="table-container">
            <h2 class="h2--title">@ViewBag.Title </h2>
            <div class="caution">
                <p>
                    Chú ý:
                    <span>
                        Để xóa Bệnh nhân phải xóa các thông tin liên quan
                        <span>Đơn khám</span> trước
                    </span>
                </p>
            </div>
            <div>
                <hr />
                <dl class="row">
                    <dt class=" col-sm-4">
                        Họ tên Bệnh nhân
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>

                    <dt class=" col-sm-4">
                        Giới tính
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>

                    <dt class=" col-sm-4">
                        Số điện thoại
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>

                    <dt class=" col-sm-4">
                        Ngày sinh
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DOB)
                    </dd>

                    <dt class=" col-sm-4">
                        Địa chỉ
                    </dt>

                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dd class="col-12" style="text-align:center">
                        <br />
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Xóa" class="btn btn-del" />
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="back">
        <a href="~/Patients/Index"><i class="fa-solid fa-arrow-left"></i></a>
    </div>
</div>