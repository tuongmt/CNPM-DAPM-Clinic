@model IEnumerable<DoAn_CNPM.Models.DiseaseStatisticList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style=" width: 100%; ">
    <h2 style="text-align: center; padding-top: 20px">MỤC CHẨN ĐOÁN BỆNH</h2>
    <hr />
    <div class="form-group form-inline" style="border: 3px solid #00E216; height: 70px; text-align: center; padding: 15px; ">
        @using (Html.BeginForm("Index", "DiseaseStatisticLists", FormMethod.Get))
        {
            <table>
                <tr>
                    <td>
                        @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success" })
                    </td>
                    <td style="padding-left:30px">
                        Tìm chẩn đoán  : <input type="text" name="SearchString" style="padding-right:8px" />
                      
                        <input type="submit" value="Tìm kiếm" class="btn btn-info" style="color:white"/>
                    </td>
                </tr>
            </table>
        }
    </div><table class="table table-hover table-striped table-bordered">
              <tr>
                  <th>
                      STT
                  </th>
                  <th>
                      ID Đơn khám
                  </th>
                  <th>
                      Khách hàng
                  </th>
                  <th>
                      Bác sĩ
                  </th>
                  <th>
                      Chẩn đoán
                  </th>
                  <th>Chức năng Sửa - Xóa</th>
              </tr>

        @foreach (var item in Model)
        {
          <tr>
              <td>
                  @Html.DisplayFor(modelItem => item.IdDSL)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.IdForm)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Form.Customer.NameCus)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Form.Doctor.NameDoctor)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Dianose)
              </td>
              <td style="color:white">
                  @Html.ActionLink("Sửa", "Edit", new { id = item.IdDSL }, new { @class = "btn btn-warning", style = "color: white" }) |

                  @Html.ActionLink("Xóa", "Delete", new { id = item.IdDSL }, new { @class = "btn btn-danger" })
              </td>
          </tr>
        }

    </table>
</div>