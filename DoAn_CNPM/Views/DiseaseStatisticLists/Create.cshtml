@model DoAn_CNPM.Models.DiseaseStatisticList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid" style=" width: 50%; ">
    <h2 style="text-align: center">TẠO MỚI CHẨN ĐOÁN BỆNH</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-4">
            Chẩn đoán
        </div>
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Dianose, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Dianose, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-4">
            Chi tiết đơn khám
        </div>
        <div class="col-sm-8">
            @Html.DropDownList("IdForm", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdForm, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-sm-12" style="text-align:center">
            <input type="submit" value="Tạo mới" class="btn btn-success" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>