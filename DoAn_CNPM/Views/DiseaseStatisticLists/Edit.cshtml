@model DoAn_CNPM.Models.DiseaseStatisticList

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style=" width: 50%; ">

    <h2 style="text-align: center;padding-top:16px">SỬA CHẨN ĐOÁN</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdDSL)

            <div class="row">
                <div class="control-label col-md-4">
                    Chẩn đoán
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Dianose, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dianose, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-4">
                    Id Chi tiết đơn khám
                </div>
                <div class="col-md-8">
                    @Html.DropDownList("IdForm", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdForm, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="col-12" style="text-align:center">
                <input type="submit" value="Lưu" class="btn btn-primary" , style="color:white" />
            </div>
        </div>
    }
    <br />
    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>