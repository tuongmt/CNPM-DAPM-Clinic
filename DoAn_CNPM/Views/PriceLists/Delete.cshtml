@model DoAn_CNPM.Models.PriceList

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style=" width: 50%; ">
    <h2 style="text-align: center">XÓA BẢNG GIÁ KHÁM</h2>
    <div>

        <hr />
        <dl class="row">
            <dt class=" col-sm-4">
                Tên bảng giá khám
            </dt>

            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NamePriceList)
            </dd>
            <br />
            <dt class=" col-sm-4">
                Đơn giá
            </dt>

            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <br />
            <dt class=" col-sm-4">
                Tên loại bệnh
            </dt>

            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Category.NameCat)
            </dd>

            <dd  style="text-align:center">
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </dd>
        </dl>

        <div>
            @Html.ActionLink("Trở về", "Index")
        </div>
    </div>
</div>