@model DoAn_CNPM.Models.DiseaseStatistic

@{
    ViewBag.Title = "CẬP NHẬT CHẨN ĐOÁN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid f-edit">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/DiseaseStatistics/Index">Đơn chẩn đoán</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật</li>
            </ol>
        </nav>
    </div>
    <div class="tabular--wrapper">
        <div class="table-container">
            <h2 class="h2--title">@ViewData["Title"]</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.DSLId)
                <div class="row">
                    <div class="col-2">
                        <label>Id </label>
                        <input type="text" name="DSLId" value="@Model.DSLId" class="form-control" disabled />
                        @Html.ValidationMessageFor(model => model.DSLId, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-10">
                        <label>Id Chi tiết Đơn khám</label>
                        @Html.DropDownList("DFId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DFId, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="row">
                        <div class="col-12">
                            <label> Nội dung chẩn đoán</label>
                            @Html.EditorFor(model => model.Diagnose, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Diagnose, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row input-wrapper">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
