                    </a>
                </li>
                <li>
                    <a href="~/DetailForms/Index">
                        <img src="~/Images/Icon/form.png" alt="" class="img-icon" />
                        <span>Chi tiết ĐK</span>
                    </a>
                </li>
            </ul>
        }
