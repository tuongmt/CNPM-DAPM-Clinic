            </ul>

            <ul>
                <li style="font-weight:bolder">Danh mục</li>
                <li>
                    <div class="text-left"><a class="format-footer" href="~/Home/Index">Trang chủ</a></div>
                </li>
                @*<li>
                    <div class="text-left"><a class="format-footer" href="~">Về chúng tôi</a></div>
                </li>*@
                <li><div class="text-left"><a class="format-footer" href="~/Home/Home">Tin tức</a></div></li>
            </ul>
            <ul>
                <li>
                    <i class="fa-solid fa-clock"></i>
                    <span id="monToSat"> Thứ 2 - Thứ 7: 8:00 - 11:30 / 13:30 - 17:00 / Chủ nhật: Nghỉ</span>

                </li>
                <li>
                    <span id="workStatus"></span>
                </li>
            </ul>
        </div>

        <div class="licence" style="text-align: center; background: #3F9A81; border-top: 1px solid #808080; color: #fff; position: relative; width:100%; left:-4px; border-bottom-right-radius: 10px;  ">
            &copy; @DateTime.Now.Year - Bản quyền thuộc về Mã Tuấn Tường
        </div>
    </div>
</body>
</html>
<style>
    li.format-hello {
        padding-left: 32px;
        padding-top: 10px;
        color: white;
    }

    a.format-footer {
        color: white;
        text-decoration: none;
    }
</style>

<script>
    // Lấy thời gian hiện tại
    var currentTime = new Date();
    var currentHour = currentTime.getHours();

    // Kiểm tra thời gian và thay đổi màu chữ tương ứng
    if (currentHour >= 8 && currentHour < 17) {
        //document.getElementById("monToSat").style.color = "blue"; // Áp dụng màu xanh
        //document.getElementById("sun").style.color = "blue"; // Áp dụng màu xanh
        document.getElementById("workStatus").innerHTML = "● Đang trong giờ làm việc";
        document.getElementById("workStatus").style.color = "yellow"; // Áp dụng màu xanh
    } else {
        //document.getElementById("monToSat").style.color = "red"; // Áp dụng màu đỏ
        //document.getElementById("sun").style.color = "red"; // Áp dụng màu đỏ
        document.getElementById("workStatus").innerHTML = "● Đã ngưng làm việc";
        document.getElementById("workStatus").style.color = "darkred"; // Áp dụng màu đỏ
    }
</script>
