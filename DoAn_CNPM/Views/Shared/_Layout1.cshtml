<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/menu.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6.2.1-web/css/fontawesome.css" rel="stylesheet">
    <link href="~/Content/fontawesome-free-6.2.1-web/css/brands.css" rel="stylesheet">
    <link href="~/Content/fontawesome-free-6.2.1-web/css/solid.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:forestgreen">
        <a style="color:white" class="navbar-brand" href="~/Home"><i class="fa-solid fa-house-chimney-medical"></i>International Clinic</a>
        <div class="container">
            <div class="navbar-collapse collapse-horizontal">
                <ul class="nav navbar-nav">
                    <li class="nav-item">  <a style="color: white; padding-top: 20px" class="nav-link" href="~/Home">TRANG CHỦ</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/Categories/Index">PHÂN LOẠI BỆNH</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/DiseaseStatisticLists/Index">CHẨN ĐOÁN BỆNH</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/Staffs/Index">NHÂN VIÊN</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/Doctors/Index">BÁC SĨ</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/Customers/Index">KHÁCH HÀNG</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/PriceLists/Index">BẢNG GIÁ KHÁM</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/Forms/Index">ĐƠN KHÁM</a></li>
                    <li class="nav-item"> <a style="color: white; padding-top: 20px" class="nav-link" href="~/DetailForms/Index">CHI TIẾT ĐƠN KHÁM</a></li>

                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-12" id="div-content" style="min-height:800px">
                @RenderBody()
            </div>
        </div>
        @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)*@
    </div>


    <div style="background-color:darkseagreen; height: 100px; text-align: center; padding: 10px;">
        <h4 style="color:green;">
            <b>
                &copy; @DateTime.Now.Year - CONSULTING ROOM APP
            </b>
        </h4>
    </div>
</body>
</html>
